
<%- include("header"); -%>

    <div class="box" id="heading">
        <!-- <h1><%= listTitle %><br><span style="font-size:large">To-Do List</span></h1> -->
        <h1><%= listTitle %></h1>
    </div>

    <div class ="box">

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off"></input>
            <button type="submit" name="button" value=<%= listTitle %> >+</button>
        </form>
    
        <% for (var i=0 ; i < newListItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= newListItems[i] %> </p>
            </div>
        <% } %> 
  
    </div>

<%- include("footer"); -%>